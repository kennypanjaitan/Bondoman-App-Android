<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/slate_950</item>
        <item name="colorOnPrimary">@color/slate_50</item>
        <item name="android:windowBackground">@color/slate_950</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- System bar color. -->
        <item name="android:statusBarColor">@color/slate_950</item>
        <item name="android:navigationBarColor">@color/slate_900</item>

        <!-- Customize theme -->
        <item name="android:textColor">@color/slate_50</item>
    </style>
    
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/slate_200</item>
    </style>

    <style name="App.Custom.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/slate_200</item>
    </style>
</resources>